<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Notepad To-Do List</title>
    <style>
        /* Стили для оформления страницы */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background-color: #4285F4;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .task-boards {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-top: 20px;
        }

        .task-board {
            flex-basis: 48%;
            background-color: #f1f1f1;
            padding: 10px;
            margin-bottom: 20px;
        }

            .task-board h3 {
                margin-top: 0;
            }

            .task-board ul {
                list-style-type: none;
                padding: 0;
            }

            .task-board li {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 5px 0;
                border-bottom: 1px solid #ccc;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Smart Notepad To-Do List</h1>
        </div>
        <div class="task-boards">
            @foreach (var board in Model.TaskBoards)
            {
            <div class="task-board">
                <h3>@board.Name</h3>
                <ul>
                    @foreach (var task in board.Tasks)
                    {
                    <li>
                        <span>@task</span>
                        <span>...</span>
                    </li>
                    }
                </ul>
            </div>
            }
        </div>
    </div>
</body>
</html>